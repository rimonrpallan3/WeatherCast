<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/_20"
    android:background="@color/error_bg">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20"
            android:layout_marginRight="@dimen/_20"
            android:layout_gravity="center"
            android:layout_marginBottom="62dp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/error_heading"
            android:textColor="@color/error_heading"
            android:textSize="54sp" />

        <Button
            android:id="@+id/btnRetry"
            android:onClick="onRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/error_btn"
            android:text="@string/error_btn" />

    </LinearLayout>

</LinearLayout>